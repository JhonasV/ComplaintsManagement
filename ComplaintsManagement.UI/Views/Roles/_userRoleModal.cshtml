@model  ComplaintsManagement.UI.Models.TaskResult<ComplaintsManagement.Domain.DTOs.UsersRolesDto>
<div class="modal fade userRoleModal" tabindex="-1" id="userRoleModal" role="dialog" aria-labelledby="userRoleModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="card-header bg-primary">
            <h3 class="text-white">Cambio de Rol</h3>
        </div>
        <div class="modal-content card">
            <div class="row container card-body">
                <div class="col-lg-12">
                    <div class="form-group">
                        <h4>Lista de roles</h4>
                        <hr />
                        @Html.DropDownListFor(e => e.Data.RolesId, (List<SelectListItem>)ViewBag.Roles, new { @Class = "form-control" })

                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col-2">
                        <button class="btn btn-primary" onclick="return confirm('¿Seguro de aplicar el cambio de rol?');">Confirmar</button>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-outline-primary" data-dismiss="modal" aria-label="Close">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>