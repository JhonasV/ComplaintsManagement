@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right ml-auto" }))
    {
    @Html.AntiForgeryToken()
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            @Html.ActionLink("Hello " + User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @Class = "btn btn-success mr-2" })
        </li>
        <li class="nav-item"><a class="btn btn-danger" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right ml-auto">
        <li class="nav-item mr-2">@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @Class = "btn btn-primary" })</li>
        <li class="nav-item">@Html.ActionLink("Iniciar Sesion", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @Class = "btn btn-secondary" })</li>
    </ul>
}
