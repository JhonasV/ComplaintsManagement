@model ComplaintsManagement.UI.Models.TaskResult<ComplaintsManagement.Infrastructure.DTOs.ComplaintsDto>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary d-flex justify-content-between">
        <div>
            <h3 class="text-white">Detalles del Reclamo o Queja</h3>
        </div>
        <div class="alert alert-warning">Estado: <span class="font-weight-bold">@Model.Data.Status.Name</span> </div>
    </div>
    <div class="container">
        <div class="row card-body">
            <div class="col-12">
                <div class="form-group">
                    <h5>Cliente: </h5>
                    <h5 class="font-weight-bold">@Model.Data.Customer.Name @Model.Data.Customer.LastName</h5>
                    <hr />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <h5>Departamento Responsable:</h5>
                    <h5 class="font-weight-bold">@Model.Data.Department.Name</h5>
                    <hr />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <h5>Fecha de creación:</h5>
                    <h5 class="font-weight-bold">@Model.Data.CreatedAt.ToString("MM/dd/yyyy hh:mm tt")</h5>
                    <hr />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <h5>Producto reportado:</h5>
                    <h5 class="font-weight-bold">@Model.Data.Product.Name</h5>
                    <hr />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <h5>Razón:</h5>
                    <h5 class="font-weight-bold">@Model.Data.ComplaintsOption.Name</h5>
                    <hr />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <h5>Comentario del cliente:</h5>
                    <h5 class="font-weight-bold">@Model.Data.Comment</h5>
                    <hr />
                </div>
            </div>
        </div>
    </div>

    <div class="card-header bg-primary d-flex justify-content-between">
        <div>
            <h3 class="text-white">Bitácora</h3>
        </div>
    </div>
    <div class="container card-body">
        <div class="row ">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Tipo</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th>Comentario</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Nelson Veras</td>
                            <td>Queja</td>
                            <td>21/03/2021 12:32 P.M.</td>
                            <td>Sometido</td>
                            <td>Comentario de prueba</td>
                        </tr>
                        <tr>
                            <td>Nelson Veras</td>
                            <td>Queja</td>
                            <td>21/03/2021 12:36 P.M.</td>
                            <td>Transferido</td>
                            <td>Asignado al departamento de cobros</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr/>
                <div class="form-group">
                    <textarea class="form-control" placeholder="Comentario de seguimiento."></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <button class="btn btn-primary">Agregar comentario</button>
                </div>
            </div>
        </div>
    </div>
  
</div>


